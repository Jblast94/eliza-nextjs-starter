# Cloud Resources Configuration for AI Development

# Runpod.io GPU Instances
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT=https://api.runpod.ai/v2
RUNPOD_DEFAULT_GPU=NVIDIA RTX A5000

# Cloudflare R2 Storage
CF_R2_ENDPOINT=https://xxxxx.r2.cloudflarestorage.com
CF_R2_ACCESS_KEY=your_access_key
CF_R2_SECRET_KEY=your_secret_key
CF_R2_BUCKET=ai-models

# MongoDB Atlas (Vector Search)
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net
MONGODB_DB=aidev

# Redis Enterprise Cloud
REDIS_ENTERPRISE_HOST=redis-xxxxx.cloud.redislabs.com
REDIS_ENTERPRISE_PORT=12345
REDIS_ENTERPRISE_PASSWORD=your_password

# Optional: Replicate.com API (for additional AI models)
REPLICATE_API_TOKEN=your_replicate_token

# Optional: Modal Labs (Serverless GPU Computing)
MODAL_TOKEN=your_modal_token

# Resource Limits
MAX_CONCURRENT_REQUESTS=10
DEFAULT_TIMEOUT=300
MAX_BATCH_SIZE=32
